<h3>Tiny App</h3>
<% if( username ) { %>
<form action="/logout" method="POST" style="margin:150px;">
  <input type="submit" value="Logout">
</form>
<% } else { %>
<form action="/login" method="POST" style="margin:150px;">
  <label for="username">Enter a username:</label>
  <input id="username" type="text" name="username" placeholder="" style="width: 300px">
  <input type="submit" value="Login">
</form>
<% } %>